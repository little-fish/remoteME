<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="@drawable/server_row_main_background_selector" >

    <LinearLayout
        android:id="@+id/server_os_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="1dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="1dip" >

        <ImageView
            android:id="@+id/serverrow_icon_os_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/serverrow_icon_os_type_description"
            android:src="@drawable/os_tux" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/server_os_type"
        android:orientation="vertical"
        android:layout_marginLeft="5dip" >

        <TextView
            android:id="@+id/serverrow_text_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/serverrow_text_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cfcfcf"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textIsSelectable="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/serverrow_icon_locked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:contentDescription="@string/serverrow_icon_locked_description"
        android:src="@drawable/locked" />

</RelativeLayout>