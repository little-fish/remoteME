<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
        
    <ScrollView 
        android:id="@+id/scroller"
        android:layout_marginTop="14dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:fadingEdgeLength="5dip"
        android:scrollbars="none">
        
        <LinearLayout
            android:id="@+id/actionItems"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="10dip"
            />
       
    </ScrollView >
    
    <ImageView
        android:id="@+id/popup_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popup_arrow_up"
        android:contentDescription="@string/quickaction_icon_arrowUp_description"
        />
        
    <ImageView
        android:id="@+id/popup_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroller"
        android:layout_marginTop="-4dip"
        android:src="@drawable/popup_arrow_down"
        android:contentDescription="@string/quickaction_icon_arrowDown_description"
        />

</RelativeLayout>