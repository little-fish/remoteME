<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/about_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="5dip"
        android:textAppearance="@style/ActivityDialogTitle"
        android:textIsSelectable="false" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="4dip"
        android:background="#33b5e5" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="8dip"
        android:layout_marginBottom="6dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_main_text" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:text="@string/about_remotes_text" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:text="@string/about_server_text" />

            <TextView
                android:id="@+id/about_homepage_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:text="@string/about_license_title_text"
                android:textAppearance="@style/whiteBiggerTextColor" />
            
            <TextView
                android:id="@+id/about_copyright_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:textIsSelectable="false" />
            
            <TextView
                android:id="@+id/about_license_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:textIsSelectable="false" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:text="@string/about_support_title_text"
                android:textAppearance="@style/whiteBiggerTextColor" />

            <TextView
                android:id="@+id/about_support_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:text="@string/about_used_content_title_text"
                android:textAppearance="@style/whiteBiggerTextColor" />

            <TextView
                android:id="@+id/about_content_newquickactiond3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_content_multiselectlistpreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />
            
            <TextView
                android:id="@+id/about_content_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:text="@string/about_used_icons_title_text"
                android:textAppearance="@style/whiteBiggerTextColor" />

            <TextView
                android:id="@+id/about_icon_web02ama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_meliae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_aimp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_banshee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_bsplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_gommediaplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_kmplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_mediamonkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_mediaplayerclassic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_rhythmbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_vlc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_winamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_icon_wmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:textIsSelectable="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>